{
  "name": "combo-fu",
  "version": "0.0.1",
  "description": "A combo writing app for fighting games. Made with MERN.",
  "main": "server.js",
  "engines": {
    "node": "v12.8.1",
    "npm": "v6.10.2"
  },
  "repository": "https://github.com/basilmeer/combo-fu.git",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently --names \"server,client\" \"npm run server --silent\" \"npm run client --silent\"",
    "build:client": "cd client && npm run build",
    "seed:games": "node ./db/seeds/games.js",
    "seed:characters": "node ./db/seeds/characters.js",
    "seed:platforms": "node ./db/seeds/platforms.js",
    "seed:users": "node ./db/seeds/users.js",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client"
  },
  "author": "Basil Meer",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5"
  },
  "devDependencies": {
    "nodemon": "^1.19.0"
  }
}
